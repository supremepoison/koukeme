/* pages/community/community.wxss */

/* 变量 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  min-height: 100vh;
  padding-bottom: 90px;
}

/* 动态背景 */
.bg-pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    radial-gradient(circle at 20% 80%, rgba(102, 126, 234, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(240, 147, 251, 0.3) 0%, transparent 50%);
  animation: bgFloat 15s ease-in-out infinite;
  z-index: -1;
}

@keyframes bgFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-40rpx); }
}

.container {
  max-width: 430px;
  margin: 0 auto;
  min-height: 100vh;
  position: relative;
}

/* 顶部导航 */
.header {
  padding: 120rpx 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
}

.btn-post {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.3);
}

.btn-post:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.2);
}

/* 帖子列表 */
.feed {
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  height: calc(100vh - 200rpx);
}

.post-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 40rpx;
  animation: cardSlide 0.3s ease;
}

@keyframes cardSlide {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 帖子头部 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.post-user {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  display: block;
}

.user-badge {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  display: block;
}

.post-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 帖子内容 */
.post-content {
  font-size: 30rpx;
  line-height: 1.7;
  margin-bottom: 32rpx;
  color: rgba(255, 255, 255, 0.85);
  display: block;
}

/* 帖子操作 */
.post-actions {
  display: flex;
  gap: 48rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 24rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.active {
  color: #ffd700;
}

.action-btn.active .action-icon {
  animation: sparkle 0.5s ease;
}

@keyframes sparkle {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

.action-icon {
  font-size: 36rpx;
  transition: transform 0.3s ease;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}
