/* pages/sos/sos.wxss */

/* 变量 */
page {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  color: #ffffff;
  min-height: 100vh;
}

/* 动态背景 */
.bg-pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    radial-gradient(circle at 20% 80%, rgba(255, 107, 107, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(238, 90, 90, 0.3) 0%, transparent 50%);
  animation: bgFloat 10s ease-in-out infinite;
  z-index: -1;
}

@keyframes bgFloat {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-40rpx) scale(1.05); }
}

.container {
  max-width: 430px;
  margin: 0 auto;
  padding: 120rpx 48rpx 48rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 顶部导航 */
.exit-btn {
  position: absolute;
  top: 100rpx;
  left: 48rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 40rpx;
  transition: all 0.3s ease;
}

.exit-btn:active {
  transform: scale(0.95);
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
  position: relative;
}

.header-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  display: block;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.header-title {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  display: block;
}

.header-subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
  display: block;
}

/* 呼吸练习区域 */
.breath-section {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  padding: 64rpx;
  text-align: center;
  margin-bottom: 48rpx;
  box-shadow: 0 16rpx 64rpx rgba(31, 38, 135, 0.15);
}

.breath-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 48rpx;
  color: #ffffff;
  display: block;
}

.circle-container {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 48rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.breath-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.breath-ring:nth-child(1) {
  width: 440rpx;
  height: 440rpx;
  animation: ringPulse 3s ease-in-out infinite;
}

.breath-ring:nth-child(2) {
  width: 360rpx;
  height: 360rpx;
  animation: ringPulse 3s ease-in-out infinite 0.5s;
}

@keyframes ringPulse {
  0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.05); }
}

.breath-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  opacity: 0.6;
  transition: all 4s ease-in-out;
  position: relative;
  z-index: 10;
}

.breath-circle::after {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  border-radius: 50%;
  border: 2px solid rgba(79, 172, 254, 0.3);
  animation: ringExpand 3s ease-in-out infinite;
}

@keyframes ringExpand {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.2); opacity: 0; }
}

.breath-circle.inhale {
  transform: scale(2.5);
  opacity: 0.8;
}

.breath-circle.hold {
  transform: scale(2.5);
  opacity: 0.8;
}

.breath-circle.exhale {
  transform: scale(1);
  opacity: 0.6;
}

.breath-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  min-height: 60rpx;
  position: relative;
  z-index: 10;
  display: block;
}

.btn-breath {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  padding: 28rpx 64rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 16rpx 48rpx rgba(79, 172, 254, 0.4);
  transition: all 0.3s ease;
}

.btn-breath:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.3);
}

/* 快捷操作卡片 */
.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 48rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.action-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.action-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.action-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  display: block;
}

/* 紧急求助 */
.emergency-section {
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 48rpx;
  text-align: center;
}

.emergency-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #ffcccc;
  display: block;
}

.emergency-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32rpx;
  line-height: 1.6;
  display: block;
}

.btn-emergency {
  background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
  color: #ff6b6b;
  border: none;
  padding: 32rpx 64rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.btn-emergency:active {
  transform: scale(0.95);
}

/* 支持信息 */
.support-info {
  margin-top: 64rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  line-height: 1.8;
}

.link {
  color: #ffffff;
  text-decoration: underline;
}
