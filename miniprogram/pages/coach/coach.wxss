/* pages/coach/coach.wxss */

/* 变量 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  min-height: 100vh;
  padding-bottom: 90px;
}

/* 动态背景 */
.bg-pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    radial-gradient(circle at 20% 80%, rgba(102, 126, 234, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(240, 147, 251, 0.3) 0%, transparent 50%);
  animation: bgFloat 15s ease-in-out infinite;
  z-index: -1;
}

@keyframes bgFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-40rpx); }
}

.container {
  max-width: 430px;
  margin: 0 auto;
  min-height: 100vh;
  position: relative;
}

/* 顶部导航 */
.header {
  padding: 120rpx 48rpx 40rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.coach-avatar {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.4);
}

.coach-info {
  flex: 1;
}

.coach-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  display: block;
}

.coach-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  display: block;
}

.status-dot {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: #4ade80;
  border-radius: 50%;
  margin-left: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 聊天区域 */
.chat-area {
  padding: 48rpx;
  height: calc(100vh - 500rpx);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.msg {
  max-width: 85%;
  padding: 28rpx 36rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  line-height: 1.6;
  animation: msgSlide 0.3s ease;
  word-wrap: break-word;
}

@keyframes msgSlide {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.msg-ai {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  align-self: flex-start;
  border-bottom-left-radius: 8rpx;
}

.msg-user {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  align-self: flex-end;
  border-bottom-right-radius: 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.3);
}

/* HALT 快捷选项 */
.halt-section {
  margin: 0 48rpx 48rpx;
}

.halt-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 24rpx;
  display: block;
}

.halt-chips {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.chip {
  padding: 20rpx 36rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.chip:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.chip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 输入区域 */
.input-section {
  margin: 0 48rpx 48rpx;
}

.input-wrapper {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.chat-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  padding: 28rpx 60rpx 28rpx 40rpx;
  color: #ffffff;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.input-actions {
  display: flex;
  gap: 16rpx;
}

.clear-btn {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 36rpx;
  padding: 0;
  line-height: normal;
}

.clear-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.send-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border: none;
  border-radius: 50%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.4);
  transition: all 0.3s ease;
  padding: 0;
  line-height: normal;
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.3);
}
